<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="Animation.Views.ExpandBar" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid ColumnSpacing="0" RowSpacing="0">
        <Image Aspect="Fill" HorizontalOptions="Fill" Source="FadeToBlack.png" />
        <BoxView Grid.Row="1" BackgroundColor="{StaticResource DarkBackground}" />
        <Label
            x:Name="ExpandLabel"
            Grid.Row="1"
            HorizontalOptions="Fill"
            HorizontalTextAlignment="Center"
            Text="Tap for info"
            TextColor="{StaticResource LightText}"
            VerticalOptions="Center" />
    </Grid>
</ContentView>
